.panel_contents
  :css
    .form-control {
      height: auto;
      line-height: 1;
    }
  = form_for @user, url: do_reset_password_admin_user_path, html: {class: 'form-horizontal'} do |f|
    .form-group
      = f.label :password, '* New Password', class: 'control-label col-sm-2'
      = f.password_field :password, required: true, class: 'form-control col-sm-10'
    .form-group
      = f.label :password_confirmation, '* New Password Confirmation', class: 'control-label col-sm-2'
      = f.password_field :password_confirmation, required: true, class: 'form-control col-sm-10'
    .form-group
      -# account for negative row margin
      .col-sm-push-2.col-sm-10{style: 'margin-left: 15px'}
        = f.submit 'Reset Password'
        = f.button 'Cancel', class: 'btn btn-link'
